<h1>Add a song</h1>
<%= form_for [@artist, @song] do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :genre %>
    <%= f.text_field :genre %>

    <%= f.label :length %>
    <%= f.number_field :length, step: 0.01 %>
    
    <%= f.label :chart_id, "Select a chart, or nil if not charting " %>
    <%= f.select  :chart_id, options_for_select([nil, 8]) %>
    <%= f.submit %>
<% end %>
